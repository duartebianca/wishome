{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Diretório de saída para os arquivos compilados
    "rootDir": "./src"  // Diretório onde estarão seus arquivos TypeScript
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
